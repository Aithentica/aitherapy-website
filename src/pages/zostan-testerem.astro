---
import PageLayout from '../layouts/PageLayout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';

const benefits = [
  {
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 0 0-2.455 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z" /></svg>`,
    title: 'Wczesny dostep',
    description: 'Korzystaj z nowych funkcji zanim beda dostepne dla wszystkich. Badz w czolowce innowacji w psychoterapii.',
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" /></svg>`,
    title: 'Wplyw na produkt',
    description: 'Twoj feedback bezposrednio wplywa na rozwoj platformy. Pomagasz tworzyc narzedzie dokladnie takie, jakiego potrzebujesz.',
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5v-8.25M12 4.875A2.625 2.625 0 1 0 9.375 7.5H12m0-2.625V7.5m0-2.625A2.625 2.625 0 1 1 14.625 7.5H12m0 0V21m-8.625-9.75h18c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125h-18c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z" /></svg>`,
    title: 'Specjalne warunki',
    description: 'Beta testerzy otrzymuja specjalne warunki cenowe i priorytetowe wsparcie techniczne po premierze.',
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" /></svg>`,
    title: 'Spolecznosc',
    description: 'Dolacz do spolecznosci terapeutow, ktorzy wspoltworza przyszlosc narzedzi klinicznych.',
  },
];

const targetAudience = [
  'Psychoterapeuci CBT z aktywna praktyka kliniczna',
  'Psycholodzy kliniczni pracujacy w nurcie poznawczo-behawioralnym',
  'Terapeuci prowadzacy prywatna praktyke lub pracujacy w osrodkach',
  'Specjalisci otwarci na nowe technologie w terapii',
];
---

<PageLayout
  title="Zostan Testerem"
  description="Dolacz do programu beta testow AI Therapy Support. Wczesny dostep, wplyw na produkt i specjalne warunki dla testerow."
>
  <!-- Hero -->
  <section class="relative bg-gray-950 text-white overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-sage-600/20 to-transparent"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1.5 bg-sage-600/20 text-sage-500 rounded-full text-sm font-medium mb-6">
          Beta Program
        </span>
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight">
          Zostan Testerem
        </h1>
        <p class="mt-6 text-lg sm:text-xl text-gray-300 leading-relaxed max-w-2xl">
          Dolacz do grona terapeutow, ktorzy wspoltworzÄ… przyszlosc narzedzi klinicznych. Twoj feedback ma realne znaczenie.
        </p>
        <div class="mt-8">
          <Button variant="primary" href="https://app.aitherapy.support/pricing" external size="lg">
            Rozpocznij okres probny
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- For Whom -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <span class="inline-block px-4 py-1.5 bg-sage-50 text-sage-600 rounded-full text-sm font-medium mb-4">
            Dla kogo?
          </span>
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
            Szukamy terapeutow CBT
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed mb-8">
            Nasz program beta testow jest skierowany do praktykujacych terapeutow poznawczo-behawioralnych, ktorzy chca miec wplyw na ksztalt narzedzi, z ktorych beda korzystac.
          </p>
          <ul class="space-y-4">
            {targetAudience.map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-sage-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" />
                </svg>
                <span class="text-gray-700">{item}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="bg-gray-50 rounded-3xl p-8 lg:p-10">
          <h3 class="text-xl font-bold text-gray-900 mb-4">Jak to dziala?</h3>
          <div class="space-y-6">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-8 h-8 rounded-full bg-sage-600 text-white flex items-center justify-center text-sm font-bold">1</div>
              <div>
                <p class="font-semibold text-gray-900">Zarejestruj sie</p>
                <p class="text-sm text-gray-600">Utworz konto na platformie i aktywuj okres probny.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-8 h-8 rounded-full bg-sage-600 text-white flex items-center justify-center text-sm font-bold">2</div>
              <div>
                <p class="font-semibold text-gray-900">Testuj platfome</p>
                <p class="text-sm text-gray-600">Korzystaj z funkcji w codziennej praktyce i eksploruj mozliwosci.</p>
              </div>
            </div>
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-8 h-8 rounded-full bg-sage-600 text-white flex items-center justify-center text-sm font-bold">3</div>
              <div>
                <p class="font-semibold text-gray-900">Podziel sie opinia</p>
                <p class="text-sm text-gray-600">Twoj feedback pomaga nam tworzyc lepsze narzedzie dla wszystkich terapeutow.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-12 lg:mb-16">
        <span class="inline-block px-4 py-1.5 bg-sage-50 text-sage-600 rounded-full text-sm font-medium mb-4">
          Korzysci
        </span>
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900">
          Dlaczego warto?
        </h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 lg:gap-8">
        {benefits.map((benefit) => (
          <Card class="p-6">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-sage-50 text-sage-600 flex items-center justify-center">
                <Fragment set:html={benefit.icon} />
              </div>
              <div>
                <h3 class="font-bold text-gray-900 mb-1">{benefit.title}</h3>
                <p class="text-sm text-gray-600 leading-relaxed">{benefit.description}</p>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-gray-950 text-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold mb-6">
        Dolacz do beta testow
      </h2>
      <p class="text-lg text-gray-300 mb-8">
        Dolacz do grona terapeutow, ktorzy odzyskali czas dla siebie i swoich pacjentow.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="primary" href="https://app.aitherapy.support/pricing" external size="lg">
          Rozpocznij okres probny
        </Button>
        <Button variant="secondary" href="/zapisy-na-sesje-feedbackowe/" size="lg">
          Umow sesje demo
        </Button>
      </div>
    </div>
  </section>
</PageLayout>
