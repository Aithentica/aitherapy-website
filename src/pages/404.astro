---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
---

<BaseLayout title="Strona nie znaleziona" noindex={true}>
  <Header />
  <main class="flex items-center justify-center min-h-[60vh] px-4">
    <div class="text-center max-w-lg">
      <p class="text-6xl font-bold text-sage-600 mb-4">404</p>
      <h1 class="text-2xl sm:text-3xl font-bold mb-4">Strona nie znaleziona</h1>
      <p class="text-gray-600 mb-8">
        Przepraszamy, strona ktorej szukasz nie istnieje lub zostala przeniesiona.
      </p>
      <a
        href="/"
        class="inline-flex items-center px-6 py-3 rounded-full bg-sage-600 text-white font-semibold hover:bg-sage-700 transition-colors"
      >
        Wróć na stronę główną
      </a>
    </div>
  </main>
  <Footer />
</BaseLayout>
