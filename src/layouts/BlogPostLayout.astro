---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  category?: string;
}

const { title, description, pubDate, updatedDate, heroImage, category } = Astro.props;

const schema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  description: description,
  datePublished: pubDate.toISOString(),
  ...(updatedDate && { dateModified: updatedDate.toISOString() }),
  ...(heroImage && { image: heroImage }),
  author: {
    '@type': 'Organization',
    name: 'AI Therapy Support',
  },
  publisher: {
    '@type': 'Organization',
    name: 'AI Therapy Support',
    logo: {
      '@type': 'ImageObject',
      url: new URL('/images/logos/therapysupport.png', Astro.site).href,
    },
  },
};

const formattedDate = pubDate.toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description} schema={schema}>
  <Header />
  <main class="bg-gray-50 min-h-screen">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 py-12 sm:py-20">
      <!-- Article Header -->
      <header class="mb-10">
        {category && (
          <span class="inline-block px-4 py-1.5 rounded-full bg-sage-50 text-sage-700 text-sm font-semibold mb-4">
            {category}
          </span>
        )}
        <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 leading-tight mb-6">{title}</h1>
        <div class="flex items-center gap-4 text-gray-600 text-base">
          <time datetime={pubDate.toISOString()} class="font-medium">{formattedDate}</time>
          {formattedUpdatedDate && (
            <span class="text-sm">
              · Zaktualizowano: <time datetime={updatedDate!.toISOString()}>{formattedUpdatedDate}</time>
            </span>
          )}
        </div>
      </header>

      <!-- Hero Image -->
      {heroImage && (
        <div class="mb-12 -mx-4 sm:mx-0">
          <img
            src={heroImage}
            alt={title}
            class="w-full rounded-none sm:rounded-2xl shadow-2xl object-cover"
            style="max-height: 500px;"
          />
        </div>
      )}

      <!-- Article Content -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 px-6 sm:px-12 py-10 sm:py-16">
        <div class="prose prose-lg max-w-none
          prose-headings:font-bold prose-headings:text-gray-900
          prose-h2:text-3xl prose-h2:mt-14 prose-h2:mb-8 prose-h2:pb-4 prose-h2:border-b-2 prose-h2:border-sage-200
          prose-h3:text-2xl prose-h3:mt-12 prose-h3:mb-6 prose-h3:text-gray-800
          prose-h4:text-xl prose-h4:mt-10 prose-h4:mb-4 prose-h4:text-gray-700
          prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-8 prose-p:text-lg prose-p:mt-0
          prose-a:text-sage-600 prose-a:font-medium prose-a:no-underline hover:prose-a:text-sage-700 hover:prose-a:underline
          prose-strong:text-gray-900 prose-strong:font-bold
          prose-em:text-gray-800 prose-em:italic
          prose-ul:my-10 prose-ul:space-y-4
          prose-ol:my-10 prose-ol:space-y-4
          prose-li:text-gray-700 prose-li:text-lg prose-li:leading-relaxed prose-li:mb-2
          prose-li::marker:text-sage-600 prose-li::marker:font-bold
          prose-hr:my-14 prose-hr:border-t-2 prose-hr:border-gray-200
          prose-blockquote:border-l-4 prose-blockquote:border-sage-500 prose-blockquote:bg-sage-50 prose-blockquote:pl-6 prose-blockquote:pr-4 prose-blockquote:py-4 prose-blockquote:my-10 prose-blockquote:italic prose-blockquote:text-gray-700 prose-blockquote:rounded-r-lg
          prose-code:bg-gray-100 prose-code:text-sage-700 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:font-mono prose-code:before:content-[''] prose-code:after:content-['']
          prose-pre:bg-gray-900 prose-pre:text-gray-100 prose-pre:rounded-xl prose-pre:shadow-lg prose-pre:border prose-pre:border-gray-700 prose-pre:my-10
          prose-img:rounded-xl prose-img:shadow-lg prose-img:my-12 prose-img:border prose-img:border-gray-200
          prose-table:border-collapse prose-table:my-10
          prose-th:bg-gray-50 prose-th:border prose-th:border-gray-300 prose-th:px-4 prose-th:py-3 prose-th:text-left prose-th:font-bold prose-th:text-gray-900
          prose-td:border prose-td:border-gray-300 prose-td:px-4 prose-td:py-3 prose-td:text-gray-700">
          <slot />
        </div>
      </div>

      <!-- Share/Back Section -->
      <div class="mt-12 flex items-center justify-between">
        <a
          href="/blog/"
          class="inline-flex items-center gap-2 text-sage-600 hover:text-sage-700 font-semibold transition-colors"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
          </svg>
          Wszystkie artykuły
        </a>
      </div>
    </article>
  </main>
  <Footer />
</BaseLayout>
