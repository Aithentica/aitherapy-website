---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  schema?: Record<string, unknown>;
  noindex?: boolean;
  transparentHeader?: boolean;
}

const { title, description, ogImage, canonicalURL, schema, noindex, transparentHeader = false } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  canonicalURL={canonicalURL}
  schema={schema}
  noindex={noindex}
>
  <Header transparent={transparentHeader} />
  <main>
    <slot />
  </main>
  <Footer />
</BaseLayout>
