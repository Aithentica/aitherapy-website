---
import { getCollection } from 'astro:content';
import Button from '../ui/Button.astro';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const latestPosts = allPosts
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);
---

<section class="py-20 lg:py-28 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-12 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900">
        Blog
      </h2>
      <p class="mt-4 text-lg text-gray-600 leading-relaxed">
        Terapia, warsztat, technologia. Blog rośnie razem z platformą -
        piszemy o tym, nad czym pracujemy i dlaczego.
      </p>
    </div>

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
      {latestPosts.map((post) => (
        <a
          href={`/blog/${post.slug}/`}
          class="group bg-white rounded-2xl border border-gray-100 overflow-hidden shadow-sm hover:shadow-md transition-shadow"
        >
          {post.data.heroImage && (
            <div class="aspect-[16/9] overflow-hidden bg-gray-100">
              <img
                src={post.data.heroImage}
                alt={post.data.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
          )}
          <div class="p-6">
            <p class="text-sm text-sage-600 font-medium mb-2">{post.data.category}</p>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-sage-600 transition-colors line-clamp-2 mb-3">
              {post.data.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed line-clamp-3 mb-4">
              {post.data.description}
            </p>
            <div class="flex items-center justify-between text-sm text-gray-400">
              <span>{post.data.author}</span>
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('pl-PL', {
                  day: 'numeric',
                  month: 'short',
                  year: 'numeric',
                })}
              </time>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- View All -->
    <div class="mt-10 text-center">
      <Button variant="outline" href="/blog/">
        Wszystkie wpisy
      </Button>
    </div>
  </div>
</section>
