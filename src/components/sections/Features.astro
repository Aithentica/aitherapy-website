---
import { features } from '../../data/features';
import Button from '../ui/Button.astro';
---

<section class="py-20 lg:py-28 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-12 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900">
        Funkcjonalności dopasowane do tego, jak wygląda praca terapeuty
      </h2>
      <p class="mt-4 text-lg text-gray-600 leading-relaxed">
        Lepsza praca kliniczna, mniej administracji.
      </p>
    </div>

    <!-- 3+3 Symmetric Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {features.map((feature) => (
        <div class="bg-white rounded-2xl border border-gray-100 p-6 lg:p-8 shadow-sm hover:shadow-md transition-shadow text-center flex flex-col">
          <div class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-sage-50 text-sage-600 mb-4 mx-auto">
            <Fragment set:html={feature.icon} />
          </div>
          <h3 class="text-xl font-bold text-gray-900 min-h-[3.5rem] flex items-start justify-center">{feature.title}</h3>
          <p class="text-gray-600 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="mt-10 text-center">
      <Button variant="outline" href="/funkcjonalnosci/">
        Zobacz wszystkie funkcjonalności
      </Button>
    </div>
  </div>
</section>
