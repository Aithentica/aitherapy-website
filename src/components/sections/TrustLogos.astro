---
interface TrustLogo {
  src: string;
  alt: string;
}

const logos: TrustLogo[] = [
  { src: '/images/trust/unicorn-hub.png', alt: 'Unicorn Hub' },
  { src: '/images/trust/partner-2.jpeg', alt: 'Partner' },
  { src: '/images/logos/microsoft-for-startups.png', alt: 'Microsoft for Startups' },
  { src: '/images/trust/partner-4.png', alt: 'Partner' },
];
---

<section class="py-16 lg:py-20 bg-gray-50">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-10">
      Zaufali nam
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12 items-center justify-items-center">
      {logos.map((logo) => (
        <img
          src={logo.src}
          alt={logo.alt}
          class="h-12 lg:h-16 w-auto object-contain grayscale opacity-60 hover:grayscale-0 hover:opacity-100 transition-all duration-300"
          loading="lazy"
        />
      ))}
    </div>
  </div>
</section>
